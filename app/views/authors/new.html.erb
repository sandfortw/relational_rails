<form action="/authors" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>Enter a new author</p>
  <p>Name</p>
  <input type='text' name='author[name]'/><br/>
  <p>Alive or Dead</p>
  <input type="radio" id="Alive" name="author[living]" value="true">
  <label for="Alive">Alive</label>
  <input type="radio" id="Dead" name="author[living]" value="false">
  <label for="Dead">Dead</label>
  <p>Year Born</p>
  <input type='number' name='author[year_born]'/><br/>
  <input type='submit'/>
</form>